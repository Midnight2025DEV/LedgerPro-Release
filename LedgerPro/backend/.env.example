# LedgerPro Backend Environment Configuration Example
# ==================================================
# Copy this file to .env and update the values

# Environment Mode (development, staging, production)
ENVIRONMENT=development

# Security Configuration
# IMPORTANT: Generate a secure key for production using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
LEDGER_SECRET_KEY=REPLACE_WITH_SECURE_256_BIT_KEY

# Demo User Configuration
# Set these for your demo/admin user
DEMO_USER_EMAIL=admin@yourdomain.com
DEMO_USER_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DEMO_USER_NAME=Administrator

# Session Configuration
SESSION_EXPIRY_HOURS=24

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Logging
LOG_LEVEL=INFO